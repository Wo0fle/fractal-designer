script/source = "extends Node2D


@onready var multibrot = $\"fractals/multibrot\"
@onready var burningships = $\"fractals/burningships\"
@onready var payneshorizons = $\"fractals/payneshorizons\"

var time = 0.0
var power = 0.1

func _ready():
	get_viewport().connect(\"size_changed\", _on_viewport_size_changed)
	_on_viewport_size_changed()

func _on_viewport_size_changed():
	multibrot.get_material().set_shader_parameter(\"viewport_size\", get_viewport_rect().size)
	burningships.get_material().set_shader_parameter(\"viewport_size\", get_viewport_rect().size)
	payneshorizons.get_material().set_shader_parameter(\"viewport_size\", get_viewport_rect().size)

func _process(delta):
#	pass
	time += delta

	# mess around with values over time and see what happens
	var real_z = 1.0-(time/10)
	var imaginary_z = -1.0+(time/10)
#	var real_c = -1.20+(time/10)
#	var imaginary_c = 0.30+(time/10)
	var real_x = -1.0+(time/10)
	var imaginary_x = 2.0-(time/10)

	payneshorizons.get_material().set_shader_parameter(\"initial_z\", Vector2(real_z, imaginary_z))
#	burningships.get_material().set_shader_parameter(\"c_value\", Vector2(real_c, imaginary_c))
	payneshorizons.get_material().set_shader_parameter(\"x_value\", Vector2(real_x, imaginary_x))
"

